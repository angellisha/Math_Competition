<!-- Leaderboard Page -->
<%- include('partials/header') %>

    <div id="leaderboard_main_box">
        <h1>Leaderboard</h1>
        <a class="link" href="/">Back to Home</a>

        <table>
            <thead>
                <tr>
                    <th>Rank</th>
                    <th>Strikes</th> <!-- Or "Correct Answers" if you prefer -->
                    <th>Date and Time</th>
                </tr>
            </thead>
            <tbody>
                <% leaderboard.forEach((entry, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= entry.streak %></td> <!-- Ensure this is correct -->
                        <td><%= entry.timestamp %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

</body>
</html>
